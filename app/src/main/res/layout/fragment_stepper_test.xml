<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Fragments.StepperTestFragment"
    android:background="@color/white"
    android:clickable="true">

    <FrameLayout android:id="@+id/frame_stepper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/text_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step test"
        app:layout_constraintTop_toBottomOf="@+id/frame_stepper"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/menu_margin"
        android:layout_marginLeft="@dimen/menu_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>